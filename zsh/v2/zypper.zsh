alias zup="sudo zypper up $1"
alias zdup="sudo zypper dup $1"
alias zlup="sudo zypper list-updates"
alias znfo="zypper info --provides --requires --recommends --suggests --conflicts $1"
alias znst="sudo zypper install $1"
alias zrch="zypper search $1"
alias zrf='sudo zypper refresh'
alias zrm="sudo zypper remove $1"
